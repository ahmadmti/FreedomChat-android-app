<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_above="@+id/docAct_btn_addNew"
    android:background="@color/colorTheme">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
      >

        <LinearLayout
            android:layout_above="@+id/layout_chat"
            android:padding="@dimen/_20sdp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/shape_rec_top_rounded"
            android:orientation="vertical"
            >


            <androidx.recyclerview.widget.RecyclerView
                android:paddingTop="@dimen/_10sdp"
                android:id="@+id/rv_conversation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_chat"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:background="@color/colorSilver"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatImageView
                android:padding="@dimen/_10sdp"
                style="@style/RippleEffect"
                android:layout_weight="1"
                android:id="@+id/iv_attach_file"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/ic_attach_file"
                />


            <EditText
                android:layout_weight="5"
                android:id="@+id/chatAct_et_msg"
                android:background="@null"
                android:inputType="textMultiLine"
                android:padding="@dimen/_15sdp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="Type a message..."
                android:textSize="@dimen/text_normal"
                tools:ignore="Autofill" />

            <RelativeLayout
                android:id="@+id/notiAct_layout_send"
                android:layout_width="0dp"
               android:layout_weight="1"
                android:layout_height="match_parent">

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:layout_centerInParent="true"
                    android:id="@+id/fab_sign_in"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/colorTheme"
                    android:scaleType="center"
                    android:src="@drawable/ic_arrow_forward_send"
                    app:tint="@color/white"
                    app:borderWidth="0dp"
                    app:fabSize="auto"
                    app:fabCustomSize="@dimen/_40sdp"
                    app:maxImageSize="@dimen/_20sdp"
                    />


                <ProgressBar
                    android:layout_centerInParent="true"
                    android:visibility="invisible"
                    android:id="@+id/chatAct_pb"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"/>

            </RelativeLayout>


        </LinearLayout>




    </RelativeLayout>



</androidx.coordinatorlayout.widget.CoordinatorLayout>