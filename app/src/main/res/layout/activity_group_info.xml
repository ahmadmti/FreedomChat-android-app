<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.geeklone.freedom_gibraltar.viewmodel.CreateGroupViewModel" />
    </data>

<androidx.coordinatorlayout.widget.CoordinatorLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_above="@+id/docAct_btn_addNew"
    android:background="@color/colorTheme">



        <LinearLayout
            android:padding="@dimen/_20sdp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/shape_rec_top_rounded"
            android:orientation="vertical"
            >


            <LinearLayout
                android:layout_weight="1.1"
                android:id="@+id/cl_item_container"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"
                android:paddingTop="@dimen/_10sdp"
                android:paddingBottom="@dimen/_10sdp">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cv_group_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:elevation="0dp"
                    app:cardCornerRadius="@dimen/_10sdp"
                    app:cardElevation="0dp">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:scaleType="fitXY"
                        android:id="@+id/iv_group_image"
                        android:layout_width="@dimen/_80sdp"
                        android:layout_height="@dimen/_80sdp"
                        android:padding="@dimen/_10sdp"
                        android:src="@drawable/ic_camera" />

                </androidx.cardview.widget.CardView>


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingStart="@dimen/_5sdp">

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:theme="@style/TextInputLayoutAppearance"
                        app:boxBackgroundColor="@android:color/transparent">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_group_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ems="10"
                            android:hint="Group Name"
                            android:imeOptions="actionNext"
                            android:drawableEnd="@drawable/ic_edit"
                            android:drawableTint="@color/colorThemeLight"
                            android:inputType="textPersonName"
                            android:maxLines="1"
                           />

                    </com.google.android.material.textfield.TextInputLayout>


                </LinearLayout>



            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:background="@color/colorDivider"/>

            <LinearLayout
                android:layout_weight="2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="vertical">

                <TextView
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:gravity="center"
                    android:id="@+id/tv_group_members_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0 Members"
                    android:textSize="@dimen/text_normal"
                    />


                <androidx.recyclerview.widget.RecyclerView
                    android:paddingTop="@dimen/_10sdp"
                    android:id="@+id/rv_group_members"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    />


            </LinearLayout>


            <View
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:background="@color/colorDivider"/>

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/layout_add_member"
                    android:layout_weight="1"
                    android:gravity="center|start"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:orientation="horizontal">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:padding="@dimen/_10sdp"
                        android:layout_width="@dimen/_50sdp"
                        android:layout_height="@dimen/_50sdp"
                        app:srcCompat="@drawable/ic_add"
                        android:tint="@color/white"
                        android:background="@drawable/shape_circle"
                        android:backgroundTint="@color/colorTheme"
                        />


                    <TextView
                        android:layout_marginStart="@dimen/_5sdp"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Add New Member"
                        style="@style/BlackText"
                        android:textSize="@dimen/text_large"
                        />


                </LinearLayout>


                <LinearLayout
                    android:id="@+id/layout_delete_group"
                    android:layout_weight="1"
                    android:gravity="center|start"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:orientation="horizontal">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:padding="@dimen/_12sdp"
                        android:layout_width="@dimen/_50sdp"
                        android:layout_height="@dimen/_50sdp"
                        app:srcCompat="@drawable/ic_delete_forever"
                        android:tint="@color/white"
                        android:background="@drawable/shape_circle"
                        android:backgroundTint="@color/colorTheme"
                        />


                    <TextView
                        android:layout_marginStart="@dimen/_5sdp"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Delete Group"
                        style="@style/BlackText"
                        android:textSize="@dimen/text_large"
                        />


                </LinearLayout>


            </LinearLayout>

        </LinearLayout>



    <com.google.android.material.floatingactionbutton.FloatingActionButton
        app:layout_anchorGravity="bottom|end"
        app:layout_anchor="@id/cv_group_image"
        android:id="@+id/fab_create_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/colorThemeLight"
        android:scaleType="center"
        android:src="@drawable/ic_camera"
        app:tint="@color/white"
        app:borderWidth="0dp"
        app:fabSize="mini"
        app:fabCustomSize="@dimen/_20sdp"
        app:maxImageSize="@dimen/_12sdp"
        />


</androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>